{% extends 'BcUserAdminBundle::layout.html.twig' %}

{% block bc_user_admin_content %}

<h1>Users</h1>

<table class="table table-striped table-condensed table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td><a href="{{ path('bc_user_admin_delete', { 'userId': user.id }) }}" class="btn btn-mini">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock bc_user_admin_content %}